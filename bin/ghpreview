#!/usr/bin/env ruby

require 'optparse'
require 'ghpreview'

options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: ghpreview [options] FILE"
  opts.separator ""

  opts.on("-w", "--watch", "Watch for changes") do |w|
    options[:watch] = w
  end
end.parse!

GHPreview::Previewer.new(ARGV[0], options)
